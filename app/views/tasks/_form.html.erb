<%= form_for([@context,@task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" data-role="fieldcontain">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field" data-role="fieldcontain">
    <%= f.label :expiration %><br />
    <%= f.datetime_select :expiration, :default => 12.hours.from_now.in_time_zone('MET'), :order => [:day, :month, :year], :datetime_separator => '', :time_separator => '', :start_year => Time.now.year, :end_year => Time.now.year + 5 %>
  </div>
  <div class="field" data-role="fieldcontain">
    <%= f.label :reminder %><br />
    <select name="task[reminder]" id="task_reminder" data-role="slider">
      <%= options_for_select([["No", false], ["Yes", true]]) %>
    </select>
  </div>
  <div class="field" data-role="fieldcontain">
    <%= f.label :important %><br />
    <select name="task[important]" id="task_important" data-role="slider">
      <%= options_for_select([["No", false], ["Yes", true]]) %>
    </select>
  </div>
  <div class="field" data-role="fieldcontain">
    <%= f.label :note %><br />
    <%= f.text_area :note %><%= f.check_box :complete, :style => "visibility:hidden" %>
  </div>
  <div class="field" data-role="fieldcontain">
    <%= f.hidden_field :context_id, :value => @context.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
