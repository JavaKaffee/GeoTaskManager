<div data-role="header">
  <h1>Tasks</h1>
</div>

<div data-role="content">
    <ul data-role="listview" data-theme="a" data-counttheme="e">
      <% @tasks.each do |task| %>
        <li>
          <%= link_to task.name, task %>
          <%= link_to 'Task bearbeiten', edit_task_path(task), "data-icon" => "gear" %>
        </li>
      <% end %>
    </ul>
</div>