<div data-role="header" data-position="fixed">
  <div data-role="navbar">
    <ul id="navigation">
      <li><%= link_to 'Listen', root_path, "data-icon" => "grid", "data-prefetch" => true, :class => @index == 0 ? "ui-btn-active ui-state-persist" : nil %></li>
      <li><%= link_to today_tasks_path, "data-icon" => "alert", "data-prefetch" => true, :class => @index == 1 ? "ui-btn-active ui-state-persist" : nil do %>Heute <span class="ui-li-count" style="color:red;text-shadow:whitesmoke 1px 1px 1px;text-align:center">&nbsp;<%= Task.all.count { |task| task.expiration >= DateTime.now && task.expiration <= 15.minutes.from_now } %>&nbsp;</span><% end %></li>
      <li><%= link_to '7 Tage', week_tasks_path, "data-icon" => "forward", "data-prefetch" => true, :class => @index == 2 ? "ui-btn-active ui-state-persist" : nil %></li>
      <li><%= link_to 'Überfällig', overdue_tasks_path, "data-icon" => "back", "data-prefetch" => true, :class => @index == 3 ? "ui-btn-active ui-state-persist" : nil %></li>
      <li><%= link_to 'Wichtig', important_tasks_path, "data-icon" => "star", "data-prefetch" => true, :class => @index == 4 ? "ui-btn-active ui-state-persist" : nil %></li>
    </ul>
  </div>
</div>
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>